<ALGORITOS DE PROBLEMAS PORTUGOL>

Par ou Ímpar:
programa {
  funcao inicio() {
    //declaraçao de variaveis
    inteiro valor

    //entrada de dados
    escreva("Informe um valor: ")
    leia(valor)

    se (valor % 2 == 0){
      escreva("Este numero e par")
    }senao{
      escreva("este numero e impar")
    }
  }
}


Maior de Dois Números:
programa {
  funcao inicio() {
    //declaraçao de variaveis
    real num1, num2

    //entrada de dados
    escreva("informe o primeiro valor: ")
    leia(num1)
    escreva("Informe o segundo valor: ")
    leia(num2)

    se(num1>num2){
      escreva("O valor ",num1," e maior que ",num2)
    }senao{
      escreva("O valor ",num2," e maior que ",num1)
    }
  }
}


Soma de Números de 1 a N:
programa {
  funcao inicio() {
    //DECLARAÇAO DE VARIAVEIS
    inteiro num1, soma=0

    //entrada de dados
    escreva("Informe um numero: ")
    leia(num1)

    //processamento
    para(inteiro i = 1; i <= num1; i++)
    {
      soma+=i
    }
    escreva(soma)
  }
}


Fatorial de um numero:
programa {
  funcao inicio() {
    //declaraçao de variaveis
    inteiro num1, fatorial=1

    //entrada de dados
    escreva("Informe um valor: ")
    leia(num1)

    //processamento
    faca{
      fatorial*=num1  //fatorial ta multiplicando num1 e assumindo o resultado
      num1--  //depois num1 e subtraido por 1 e volta o loop
    }enquanto(num1>0)
    escreva(fatorial)
  }
}


Tabuada Simples:
programa {
  funcao inicio() {
    //entrada de dados
    inteiro num1, result

    //entrada de dados
    escreva("Informe um numero: ")
    leia(num1)

    //processamento
    para(inteiro i = 1; i<=10; i++){
      result=i*num1
      escreva(num1 ," x ", i," = ",result, "\n")
    } 
  }
}


Media de notas:
programa {
  funcao inicio() {
    //declaraçao de variaveis
    cadeia nome
    real nota1, nota2, nota3, media

    //entrada de dados
    escreva("Informe o nome do aluno/a: ")
    leia(nome)
    escreva("Informe a primeira nota: ")
    leia(nota1)
    escreva("Informe a segunda nota: ")
    leia(nota2)
    escreva("Informe a terceira nota: ")
    leia(nota3)

    //processamento
      se (nota1>=0 e nota2>=0 e nota3>=0){
       media = (nota1+nota2+nota3)/3
    
        se (media>=7){
         escreva(nome,"  esta aprovado")
        }
        se (media<7 e media>4){
         escreva(nome," esta de prova final")
        }
        se(media<=4){
         escreva(nome," esta reprovado")
        }
      }
      senao{
        escreva("Notas invalidas")
      }
  }
}
